% if (defined?(fobj))
% ldom = Page.new(fobj).dom()
<div class="article_preview" style="width: 300px; border: 2px solid green;">
  <h3><%= ldom[:doctitle] %></h3>
  <hr/>
  <p>
    author: <i><%= ldom[:author] %></i>
  </p>
  <a href="<%= fobj.sub("pages/", "").sub(/\.\w*/, ".html") %>">
    [ read more ]
  </a>
</div>
% else
<p style="color=red;">
  <b>(article_preview) article not defined !</b>
</p>
% end
